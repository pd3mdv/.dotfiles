// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "features": {
    "relative_line_numbers": true,
    "edit_prediction_provider": "copilot"
  },
  "base_keymap": "VSCode",
  "vim_mode": true,
  "ui_font_size": 13,
  "buffer_font_size": 12,
  "theme": {
    "mode": "system",
    "light": "Ros√© Pine Moon",
    "dark": "Gruvbox Dark Hard"
  },
  "relative_line_numbers": true,
  "editor.relative_line_numbers": true,
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/cvs",
    "**/.ds_store",
    "**/thumbs.db",
    "**/.classpath",
    "**/.settings",
    // above is default from zed
    "**/out",
    "**/dist",
    "**/.husky",
    "**/.turbo",
    "**/.vscode-test",
    "**/.vscode",
    "**/.next",
    "**/.storybook",
    "**/.tap",
    "**/.nyc_output",
    "**/node_modules"
  ],
  // Turn off telemetry
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  // Move all panel to the right
  "project_panel": {
    "button": true,
    "dock": "left",
    "git_status": true
  },
  "outline_panel": {
    "dock": "right"
  },
  "collaboration_panel": {
    "dock": "left"
  },
  // Move some unnecessary panels to the left
  "notification_panel": {
    "dock": "left"
  },
  "chat_panel": {
    "dock": "left"
  }
}
