#!/usr/bin/env bash

cd $(tmux run "echo #{pane_start_path}")
url=$(git remote get-url origin) 

if [[ $url == *github.com* ]]; then
    if [[ $url == git@* ]]; then
        url="${url#git@}"
        url="${url/:/\/}" 
        url="https://$url"
    fi
    if [[ -x "$(command -v open)" ]]; then
	open "$url"
    else
	qutebrowser "$url"
    fi
else
    echo "This repository is not hosted on GitHub"
fi
